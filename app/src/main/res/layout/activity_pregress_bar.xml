<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.allen.androidcustomview.activity.ProgressBarActivity">


    <com.allen.androidcustomview.widget.StepsView
        android:id="@+id/StepsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:barColor="@color/blue"
        custom:circleRadius="50"
        custom:completePosition="3"
        custom:labelColor="@color/blue"
        custom:labels="@array/labels"
        custom:progressColorss="@color/blue"
        custom:progressStrokeWidthss="30"
        custom:progressTextColor="@color/black" />




    <!--<com.allen.androidcustomview.widget.ProductProgressBar-->
        <!--android:id="@+id/product_progress_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="20dp" />-->


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.allen.androidcustomview.widget.ProductProgressBar
            android:id="@+id/product_progress_view"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/shape_white_oval_bg"
                android:id="@+id/text1"
                android:text="7"

                android:textColor="#333"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:gravity="center"
                android:background="@drawable/shape_white_oval_bg"
                android:id="@+id/text2"
                android:text="15"
                android:textColor="#333"
                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text3"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:text="30"
                android:textColor="#333"
                android:textSize="15sp"
                android:background="@drawable/shape_white_oval_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </RelativeLayout>
    </RelativeLayout>



    <Button
        android:id="@+id/startAnimationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="启动动画" />


</LinearLayout>
